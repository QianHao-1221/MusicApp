<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musicapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="" />
        <activity
            android:name=".RegisterActivity"
            android:label="" />
        <activity
            android:name=".ForgetActivity"
            android:label="" />
        <activity
            android:name=".ImageSelectionActivity"
            android:label="" />
        <activity
            android:name=".ColorSelectionActivity"
            android:label="" />
        <activity
            android:name=".MessageActivity"
            android:label="" />
        <activity
            android:name=".MusicPlayerActivity"
            android:label="" />
        <activity
            android:name=".RecMusicListInfoActivity"
            android:label="" />
        <activity
            android:name=".LyricActivity"
            android:label="" />
        <activity android:name=".UserMusicListActivity" />
        <activity
            android:name=".FavActivity"
            android:label="喜欢" />
        <activity
            android:name=".LocalMusicActivity"
            android:label="本地歌曲" />
        <activity
            android:name=".BuyActivity"
            android:label="已购" />
        <activity android:name=".UpdateNameActivity" />
        <activity android:name=".UpdatePasswordActivity" />

        <service
            android:name=".service.MusicService"
            android:exported="true" />

        <activity android:name=".BuildNewListActivity"></activity>
    </application>

</manifest>